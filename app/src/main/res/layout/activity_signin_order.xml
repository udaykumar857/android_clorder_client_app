<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fb="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/home_screen_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/new_order_sign_in_txt_bg_col"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/customer_log_in_txt"
        android:textColor="@color/new_order_sign_in_txt_col"
        android:textSize="@dimen/new_order_sign_in_txt_size"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/new_user_email_txt"
                android:textColor="@color/email_sign_in_txt_col"
                android:textSize="@dimen/email_sign_in_txt_size"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/email_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/drawable_white_bg"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:padding="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/password_sign_in_txt"
                android:textColor="@color/password_sign_in_txt_col"
                android:textSize="@dimen/password_sign_in_txt_size"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/password_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/drawable_white_bg"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:padding="8dp" />


            <TextView
                android:id="@+id/create_user_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:autoLink="none"
                android:text="@string/register_user_sign_in_txt"
                android:textColor="@color/create_user_sign_in_txt_col"
                android:textSize="@dimen/create_user_sign_in_txt_size" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/sign_in_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/drawable_button_blue_bg"
                    android:padding="10dp"
                    android:text="@string/sign_in_txt"
                    android:textColor="@color/sign_in_txt_col"
                    android:textSize="@dimen/sign_in_txt_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/guest_user_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/drawable_button_blue_bg"
                    android:ems="7"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/guest_log_in_txt"
                    android:textColor="@color/guest_user_txt_col"
                    android:textSize="@dimen/guest_user_txt_size"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/or_txt"
                android:textColor="@color/or_txt_col"
                android:textSize="@dimen/or_txt_size"
                android:textStyle="bold" />

            <com.facebook.login.widget.LoginButton
                android:id="@+id/fb_login_btn"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textColor="#EFEFEF"
                android:textSize="15dp"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/fb_image"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@mipmap/facebook2" />


            <!--<com.google.android.gms.common.SignInButton-->
            <!--android:id="@+id/google_sign_in_btn"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_margin="10dp"-->
            <!--android:layout_marginBottom="10dp"-->
            <!--android:visibility="gone" />-->

            <ImageView
                android:id="@+id/g_image"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@mipmap/google_plus2" />


            <Button
                android:id="@+id/google_sign_out_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/google_sign_out_btn_txt"
                android:textAllCaps="false"
                android:visibility="gone" />
        </LinearLayout>


    </ScrollView>
</LinearLayout>