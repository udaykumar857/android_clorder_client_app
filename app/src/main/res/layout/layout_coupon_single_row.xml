<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <com.clorderclientapp.utils.FontTextViewBoldClass
        android:id="@+id/coupon_id_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:weightSum="1"
        android:orientation="horizontal">


        <com.clorderclientapp.utils.FontTextViewRegularClass
            android:id="@+id/coupon_desc_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="0.5"
            android:textColor="@android:color/black" />
        <View
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"/>

        <com.clorderclientapp.utils.FontTextViewBoldClass
            android:id="@+id/apply_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="0.3"
            android:background="@drawable/drawable_reorder_image"
            android:ems="6"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/apply_txt"
            android:textAllCaps="false"
            android:textColor="@color/apply_txt_col" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E4E4E4" />


</LinearLayout>