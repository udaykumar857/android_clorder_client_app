<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:background="@mipmap/home_screen_bg"
    android:orientation="vertical"
    android:weightSum="2.5">
    <!--android:background="@mipmap/home_screen_bg"-->
    <!--android:background="@mipmap/waba_bg"-->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:src="@mipmap/johnnies_logo_bg" />
    <!--android:src="@mipmap/resized_waba"-->
    <!--android:src="@mipmap/johnnies_logo_bg"-->

    <ImageView
        android:id="@+id/reorder_lastorder_image"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="0.5"
        android:src="@mipmap/reorder_last_order_btn" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/create_account_btn"
            android:layout_marginBottom="45dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/pickup_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/drawable_button_blue_bg"
                android:text="@string/pickup_text"
                android:textColor="@android:color/white"
                android:textSize="@dimen/delivery_type_text_size"
                android:textStyle="bold" />

            <Button
                android:id="@+id/delivery_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/drawable_button_delivery_bg"
                android:text="@string/delivery_text"
                android:textColor="@android:color/white"
                android:textSize="@dimen/delivery_type_text_size"
                android:textStyle="bold" />

        </LinearLayout>


        <Button
            android:id="@+id/create_account_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/footer_clorder"
            android:background="@drawable/drawable_sign_in_account"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/create_account_text"
            android:textAllCaps="false"
            android:textColor="@color/create_account_text_color"
            android:textSize="@dimen/create_account_text_size"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/footer_clorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/version_num"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@mipmap/footer_clorder" />


        <TextView
            android:id="@+id/version_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="V-2.0"
            android:textColor="@android:color/white" />
    </RelativeLayout>


</LinearLayout>
