<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/modifiers_txt_bg_col"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/tip_dialog_txt"
        android:textColor="@android:color/white"
        android:textSize="@dimen/tip_dialog_txt_size"
        android:textStyle="bold" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/tip_value_msg"
        android:textSize="@dimen/tip_value_msg_size" />

    <EditText
        android:id="@+id/tip_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/drawable_all_day_single_row_bg"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:maxLength="5"
        android:minHeight="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/tip_cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel_button_txt"
            android:textSize="@dimen/cancel_button_txt_size" />

        <Button
            android:id="@+id/tip_ok_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/ok_button_txt"
            android:textSize="@dimen/ok_button_txt_size" />


    </LinearLayout>


</LinearLayout>