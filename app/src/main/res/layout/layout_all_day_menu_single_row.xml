<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/drawable_all_day_single_row_bg"
    android:orientation="horizontal"
    android:padding="10dp">

    <TextView
        android:id="@+id/menu_list_item_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/menu_list_arrow"
        android:layout_toStartOf="@+id/menu_list_arrow"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:textSize="@dimen/menu_item_text_size"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/menu_list_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@mipmap/right_arrow_bg" />


</RelativeLayout>